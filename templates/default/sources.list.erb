#
# Ubuntu <%= @code_name %> - Generated by Chef
#

deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @archive_url %> <%= @code_name %> <%= @repositories %>
<% if @include_source_packages -%>deb-src <%= @archive_url%> <%= @code_name %> <%= @repositories %><% end -%>

deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @archive_url %> <%= @code_name %>-updates <%= @repositories %>
<% if @include_source_packages -%>deb-src <%= @archive_url %> <%= @code_name %>-updates <%= @repositories %><% end -%>

#
# Security updates
#
deb <% if @architectures -%>[arch=<%= @architectures.join(" ") %>] <% end -%><%= @security_url %> <%= @code_name %>-security <%= @repositories %>
<% if @include_source_packages -%>deb-src <%= @security_url %> <%= @code_name %>-security <%= @repositories %><% end -%>